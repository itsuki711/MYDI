<h3 class="form-title">編集ページ</h3>

<%= form_for @post, html: { class: "edit-post-form" } do |f| %>
  <div class="form-group">
    <%= f.label :title, "タイトル", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tag, "タグ", class: "form-label" %>
    <%= f.text_field :tag, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content, "概要", class: "form-label" %>
    <%= f.text_area :content, class: "form-control large-textarea" %>
  </div>

  <div class="form-actions">
    <%= f.submit "編集", class: "btn-submit" %>
  </div>
<% end %>
