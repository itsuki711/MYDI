<h3 class="form-title">新規投稿ページ</h3>

<%= form_for(@post, url: { controller: 'posts', action: 'create' }, html: { class: 'post-form' }) do |f| %>
  <div class="field">
    <!-- タイトル入力 -->
    <div class="title-field form-group">
      <%= f.label :title, 'タイトル' %><br>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <!-- タグ入力 -->
    <div class="tag-field form-group">
      <%= f.label :tag, 'タグ' %><br>
      <%= f.text_field :tag, class: 'form-control' %>
    </div>

    <!-- コンテンツ入力 -->
    <div class="content-field form-group large-textarea ">
      <%= f.label :content, '概要' %><br>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
  </div>

  <!-- 送信ボタン -->
  <div class="action">
    <%= f.submit '投稿', class: 'btn-submit' %>
  </div>
<% end %>
